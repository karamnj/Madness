<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="110dp"
        android:layout_gravity="left|top"
        android:background="@color/theme_tertiary_light_orange">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/userlogout"
            android:layout_gravity="right|top"
            android:text="@string/custom_font_icon_login"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <com.sirius.madness.ui.views.CustomFontTextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="WELCOME,"
                android:id="@+id/profileText"
                android:textColor="#fff"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:textSize="14sp"
                style="@style/montserratSemiBold"/>

            <com.sirius.madness.ui.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNKNOWN"
                android:id="@+id/userName"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="bottom"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginBottom="8dp"
                android:gravity="bottom"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                style="@style/montserratLight"/>
        </LinearLayout>
    </FrameLayout>

