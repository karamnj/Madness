    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="110dp"
        android:layout_gravity="right|top"
        android:layout_marginLeft="8dp"
        android:background="@color/theme_tertiary_orange">

        <TextView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/scheduleIcon"
            android:layout_gravity="right|top"
            android:background="@drawable/calendar"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <com.sirius.madness.ui.views.CustomFontTextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="YOUR SCHEDULE"
                android:id="@+id/yourSchedule"
                android:textColor="#fff"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:textSize="14sp"
                style="@style/montserratSemiBold"/>

            <com.sirius.madness.ui.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(No Next Session)"
                android:id="@+id/next_session"
                android:background="?android:attr/selectableItemBackground"
                android:layout_gravity="bottom"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginBottom="8dp"
                android:gravity="bottom"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                style="@style/montserratLight"/>
        </LinearLayout>


    </FrameLayout>

</LinearLayout>