<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <com.sirius.madness.ui.views.CustomFontTextView
            style="@style/openSansSemiBold"
            android:id="@+id/role_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2b2f35"
            android:text="What is your role?"
            android:gravity="center_vertical|right"
            android:textSize="16dp"
            android:paddingTop="10dp"
            android:layout_gravity="left" />

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:prompt="@string/spinner_default"
            android:textSize="14dp"
            android:paddingLeft="25dp"
            android:textColor="#909193"
            android:background="@drawable/shadow"
            android:spinnerMode="dropdown"
            android:gravity="left|center_vertical" />
        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:paddingRight="0dp"
            android:layout_gravity="right"
            android:layout_marginTop="9dp"
            android:layout_marginRight="12dp"
            android:background="@color/theme_secondary_blue">
            <com.sirius.madness.ui.views.CustomFontTextView
                style="@style/customIconFont"
                android:id="@+id/downArrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textSize="20sp"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
