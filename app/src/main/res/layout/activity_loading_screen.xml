<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/login_bg_no_logo"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.sirius.madness.ui.views.CustomFontTextView
            style="@style/montserratRegular"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/login_tutorial_welcome"
            android:id="@+id/loading_welcome_text"
            android:background="@color/theme_primary_base"
            android:textColor="@android:color/white"
            android:layout_weight="2"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/textView4"
            android:background="@android:color/white" />

    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="7sp"
        android:id="@+id/loading_progress"
        android:max="100"
        android:clickable="false"
        android:progressDrawable="@drawable/custom_progressbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text="Loading..."
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@android:color/white" />

