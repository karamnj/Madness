<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/theme_primary_base</item>
        <item name="android:textSize">23dp</item>

        <!-- Support library compatibility -->
        <item name="background">@color/theme_primary_base</item>
    </style>

    <!-- ActionBar styles -->
    <style name="WebviewActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/theme_primary_base</item>
        <!-- Support library compatibility -->
        <item name="background">@color/theme_primary_base</item>
    </style>

    <!-- Custom fonts -->
    <style name="montserratBlack" parent="@android:style/Widget.TextView">
        <item name="com.sirius.madness:font">fonts/Montserrat-Black.otf</item>
    </style>
    <style name="montserratBold" parent="@android:style/Widget.TextView">
        <item name="com.sirius.madness:font">fonts/Montserrat-Bold.otf</item>
    </style>
    <style name="montserratExtraBond" parent="@android:style/Widget.TextView">
        <item name="com.sirius.madness:font">fonts/Montserrat-ExtraBond.otf</item>
    </style>
    <style name="montserratHairline" parent="@android:style/Widget.TextView">
        <item name="com.sirius.madness:font">fonts/Montserrat-Hairline.otf</item>
    </style>
    <style name="montserratLight" parent="@android:style/Widget.TextView">
        <item name="com.sirius.madness:font">fonts/Montserrat-Light.otf</item>
    </style>
    <style name="montserratRegular" parent="@android:style/Widget.TextView">
        <item name="com.sirius.madness:font">fonts/Montserrat-Regular.otf</item>
    </style>
    <style name="montserratSemiBold" parent="@android:style/Widget.TextView">
        <item name="com.sirius.madness:font">fonts/Montserrat-SemiBold.otf</item>
    </style>
    <style name="montserratUltraLight" parent="@android:style/Widget.TextView">
        <item name="com.sirius.madness:font">fonts/Montserrat-UltraLight.otf</item>
    </style>
    <style name="openSansRegular" parent="@android:style/Widget.TextView">
        <item name="com.sirius.madness:font">fonts/OpenSans-Regular.ttf</item>
    </style>
    <style name="openSansSemiBold" parent="@android:style/Widget.TextView">
        <item name="com.sirius.madness:font">fonts/OpenSans-Semibold.ttf</item>
    </style>
    <style name="customIconFont" parent="@android:style/Widget.TextView">
        <item name="com.sirius.madness:font">fonts/customIconFont.ttf</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Custom Radio Buttons-->
    <style name="RadioButtonTheme" parent="AppTheme">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorSecondary">@color/theme_primary_highlight</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/theme_neutral_dark_grey</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginLeft">-5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/theme_neutral_dark_grey</item>
        <item name="android:background">@drawable/dropdown</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/overlay</item>
    </style>

</resources>
